package mybatis.hr.dao;

import java.io.IOException;
import java.io.InputStream;
import java.util.List;

import mybatis.hr.vo.Employee;

import org.apache.ibatis.io.Resources;
import org.apache.ibatis.session.SqlSession;
import org.apache.ibatis.session.SqlSessionFactory;
import org.apache.ibatis.session.SqlSessionFactoryBuilder;

public class EmployeeDAO {
	private static EmployeeDAO inst = new EmployeeDAO();
	private SqlSessionFactory sessioncFactory;
	private EmployeeDAO(){
		InputStream is = null;
		try{
			is = Resources.getResourceAsStream("mybatis-config.xml");
		}catch(IOException e){
			e.printStackTrace();
		}
		SqlSessionFactoryBuilder builder = new SqlSessionFactoryBuilder();
		sessioncFactory = builder.build(is);
	}
	public static EmployeeDAO getInstance(){
		return inst;
	}
	public List<Employee> selectAllEmployee(){
		SqlSession session = sessioncFactory.openSession();
		try{
			return session.selectList("selectAllEmplyee");
		}finally{
			session.close();
		}
	}
}

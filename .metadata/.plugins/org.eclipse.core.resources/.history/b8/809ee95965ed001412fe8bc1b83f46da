package publisher.dao;

import org.apache.ibatis.session.SqlSession;
import org.apache.ibatis.session.SqlSessionFactory;

import publisher.common.DatabaseManager;
import publisher.vo.Publisher;

public class BookDAO {
	private static BookDAO inst = new BookDAO();
	private SqlSessionFactory sessionFactory;
	private String ns = "mybatis.dao.book.";
	
	private BookDAO(){
		sessionFactory = DatabaseManager.getInstance().getSqlSessionFactory();
	}
	public static BookDAO getInstance(){
		return inst;
	}
	
	public int insertBook(Publisher publisher){
		SqlSession session = sessionFactory.openSession();
		try{
			int cnt = session.insert(ns+"insertPublisher",publisher);
			return cnt;
		}finally{
			session.close();
		}
	}
}
